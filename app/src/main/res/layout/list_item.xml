<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Form"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/titleText"
        android:layout_marginLeft="@dimen/title_marginLeft"
        android:textColor="@color/titleBlue"
        android:textSize="@dimen/title_textSize"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/date"
        android:text="@string/dateText"
        android:layout_marginLeft="@dimen/date_marginLeft"
        android:layout_marginRight="@dimen/date_marginRight"
        android:textColor="@color/dateGreen"
        android:layout_marginTop="@dimen/date_marginTop"
      />
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/sum"
        android:text="@string/sumText"
        android:layout_marginLeft="@dimen/sum_marginLeft"
        android:textColor="@color/sumRed"/>
</RelativeLayout>